    <img src="whitebored.png" class="mainlogo" alt="WhiteBored Logo">
    <form id="myForm" action="/login" onsubmit="return validateForm()">
    <h1 id="litheader">Login</h1>
    <div class="form-control" id="user-form">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" placeholder="Enter username..." required />
    </div>
    <div id="errorDiv">
    </div>
    
    <p class="p-container">
        <input type="submit" name="Login" id="go" value="Login">
    </p>
    
    </form>
    
    <script>
        function validateForm() {
            let regex = /^[a-z0-9]+$/i
            let str = document.forms["myForm"]["username"].value;
            console.log(str);
            if ((str.length >= 2) && regex.test(str)) {
                return true;
            }
            else {
                //alert("Username should be alphanumeric and more than 2 characters.");
                var errorDiv = document.getElementById("errorDiv")
                errorDiv.innerHTML = "Username should be alphanumeric and more than 2 characters.";
                return false;
            }
        }
    </script>
    
    
